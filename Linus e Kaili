                Console.WriteLine("<2> 6 patinhos");
                Console.WriteLine("<3> 4 patinhos");



                resposta = Convert.ToInt32(Console.ReadLine());

                int numerodeAcertos = 0;
                int numerodeErros = 0;
                if (resposta == 1)
                {
                    numerodeAcertos++;
                }
                else
                {
                    numerodeErros++;
                }
